    <script>
        // Copy referral link
        function copyReferralLink() {
            const input = document.getElementById('referralLink');
            input.select();
            document.execCommand('copy');
            
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = '‚úÖ Copied!';
            btn.style.background = 'linear-gradient(135deg, #2ecc71 0%, #27ae60 100%)';
            
            setTimeout(() => {
                btn.textContent = originalText;
                btn.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
            }, 2000);
        }

        // Withdraw funds
        function withdrawFunds() {
            if (confirm('Request payout of $2,504.70 to your connected account?')) {
                alert('‚úÖ Payout request submitted! Funds will be transferred within 3-5 business days.');
            }
        }

        // Simulate real-time data updates
        function updateStats() {
            const earnings = document.querySelector('.stat-card:nth-child(1) .stat-value');
            const referrals = document.querySelector('.stat-card:nth-child(2) .stat-value');
            
            // Simulate small increments
            setInterval(() => {
                const currentEarnings = parseFloat(earnings.textContent.replace('$', '').replace(',', ''));
                const newEarnings = (currentEarnings + Math.random() * 0.5).toFixed(2);
                earnings.textContent = `$${parseFloat(newEarnings).toLocaleString()}`;
            }, 5000);
        }

        // Initialize
        updateStats();
    </script>
